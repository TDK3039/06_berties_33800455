<!doctype html>
<html>
  <head>
    <title>Books at <%= shopData.shopName %></title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
    <style>
      table {
        width: 80%;
        margin: 2em auto;
        border-collapse: collapse;
        font-family: Arial, Helvetica, sans-serif;
      }

      th, td {
        border: 1px solid #ccc;
        padding: 0.75em;
        text-align: left;
      }

      th {
        background-color: #f4f4f4;
        color: darkcyan;
      }

      td {
        color: #333;
      }
    </style>
  </head>
  <body>
    <h1>Books at <%= shopData.shopName %></h1>
    <table>
      <tr>
        <th>Title</th>
        <th>Price (Â£)</th>
      </tr>
      <% availableBooks.forEach(function(book) { %>
        <tr>
          <td><%= book.name %></td>
          <td><%= book.price %></td>
        </tr>
      <% }); %>
    </table>
  </body>
</html>